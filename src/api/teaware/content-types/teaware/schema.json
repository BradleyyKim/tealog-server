{
  "kind": "collectionType",
  "collectionName": "teawares",
  "info": {
    "singularName": "teaware",
    "pluralName": "teawares",
    "displayName": "Teaware",
    "description": "Brewing tools such as Gaiwan, Yixing Pot, etc."
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "Gaiwan",
        "Yixing_Pot",
        "Glass_Pot",
        "Pitcher",
        "Cup"
      ]
    },
    "material": {
      "type": "string"
    },
    "volume_ml": {
      "type": "integer"
    },
    "is_favorite": {
      "type": "boolean",
      "default": false
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "Active",
        "Broken",
        "Sold"
      ],
      "default": "Active"
    },
    "photo": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "owner": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user"
    }
  }
}
