{
  "kind": "collectionType",
  "collectionName": "tea_leaves",
  "info": {
    "singularName": "tea-leaf",
    "pluralName": "tea-leaves",
    "displayName": "TeaLeaf",
    "description": "Tea inventory with category, origin, and tasting notes."
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "Green",
        "White",
        "Oolong",
        "Black",
        "Sheng_Puerh",
        "Shou_Puerh",
        "Herbal"
      ]
    },
    "brand_origin": {
      "type": "string"
    },
    "year": {
      "type": "integer"
    },
    "tasting_notes": {
      "type": "richtext"
    },
    "in_stock": {
      "type": "boolean",
      "default": true
    },
    "cover_photo": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "owner": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user"
    }
  }
}
